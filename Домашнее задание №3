# Задача №1
number3 = int(input("Введите трёхзначное число: "))
number1 = (number3 // 100)
number2 = ((number3 // 10) % 10)
number = (number3 % 10)
summa = (number1 + number2 + number)
print(number1, number2, number)
print(summa)

# №Задание №2
x = float(input("Введите вещественное число c двумя знаками после точки: "))
drob = ((x*100) % 100)
floatnumber = ((drob/10) // 1)
print(f"Дробная часть числа {x}:", drob,f"\nПервая цифра после десятичной точки числа {x}:", drob)

#Задание №3
list_ten=[]
for elements in range(10,60,10):
    list_ten.append(elements)
print(f"Cписок от 10 до 50: {list_ten}")
list_ten.reverse()
print (f"Реверсивный список: {list_ten}")

# Задание №4
list_of_six = []
for elements in range(100, 202, 6):
    list_of_six.append(elements)
print("Список: ",list_of_six)
for num in list_of_six:
    if (num % 5)==0 and num <= 150:
        print("Число из списка,которое делится на 5 и не больше 150: ",num)

#Задание №5
#№1 попытка
import random
player1=int(input("Попытка №1.Введите число от 1 до 10: "))
player2=random.randint(0,10)
print(player1,player2)
if player1>player2 or player1<player2:
    print("You lose!")
else:
    print("You win!")
#№2 попытка
